extends layout

block content
  div.vertical-center
    div.card.bg-light.text-center.w-50.mb-5.mx-auto
      h5.card-header Please #{title}
      div.card-body.mx-auto
        form(action="" method="POST")
          div.form-group
            input(type="text" placeholder="Enter Username" name="username").form-control
          div.form-group
            input(type="password" name="password" placeholder="Password").form-control
          button(type='submit').btn.btn-primary.btn-block #{title}