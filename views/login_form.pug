extends layout

block content
  div.vertical-center
    div.card.text-center.w-50.mb-5.mx-auto.bg-dark.text-white
      h5.card-header Please Login
      div.card-body.mx-auto
        form(action="" method="POST")
          div.form-group
            input(type="text" placeholder="Enter Username" name="username" required="true").form-control
          div.form-group
            input(type="password" name="password" placeholder="Password" required="true").form-control
          button(type='submit').btn.btn-primary.btn-block Login